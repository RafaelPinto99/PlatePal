<meta name="viewport" content="width=device-width, initial-scale=1.0">
  <div class="container p-3 w-100 my-2">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
        <div class="card bg-white rounded-5">
          <div class="row g-0">
            <!-- Image Section -->
            <div class="col-md-6 col-lg-5 d-none d-md-block">
              <img
                src="https://images.unsplash.com/photo-1484980972926-edee96e0960d?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8N3x8Zm9vZHxlbnwwfDF8MHx8fDA%3D"
                alt="login form"
                class="img-fluid rounded-start-5"
              />
            </div>

            <!-- Login Form Section -->
            <div class="col-md-6 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <%# <h2>Log in</h2> %>
                  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                    <div class="form-inputs">
                      <%= f.input :email,
                                  required: false,
                                  autofocus: true,
                                  input_html: { autocomplete: "email" } %>
                      <%= f.input :password,
                                  required: false,
                                  input_html: { autocomplete: "current-password" } %>
                      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
                    </div>

                    <div class="form-actions">
                      <%# <%= f.button :submit, "Log in" %>
                      <%= f.button :submit, "LOG IN", class: "btn btn-warning text-white mb-3" %>
                    </div>
                  <% end %>
                  <div class="mt-3">
                    <%= render "devise/shared/links"%>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
