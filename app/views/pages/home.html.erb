<section class="hero d-flex flex-wrap justify-content-between align-items-center gap-5">
  <div class="d-flex flex-column justify-content-around w-50 h-100">
    <h1 class="m-0">SMART PLANNING<br>BETTER EATING</h1>
    <p class="m-0">Explore our healty meal planner based on your preferences. You can create a weekly plan to include any recipe.</p>
    <%= link_to "Start now", surveys_path, class:"orange-button text-decoration-none w-25"%>

    <div class="align-self-start d-flex justify-content-start align-items-end gap-5">
    <% @plan_recipes.each do |plan_recipe| %>
      <div class="d-flex flex-column justify-content-between border rounded-5 m-1 p-1 bg-info"
           style="width: 12rem; height: 15rem; background-color: floral-white;"
           draggable="true"
           data-id="<%= plan_recipe.id %>">

        <div class="p-2 d-flex flex-column align-items-center">
          <%= cl_image_tag plan_recipe.recipe.photo.key,
                width: 90, height: 90,
                crop: :thumb, gravity: :face,
                class: "rounded-circle mb-2" %>
          <p class="text-center m-0"><small><strong><%= plan_recipe.recipe.name %></strong></small></p>
        </div>

        <div class="d-flex flex-column">
          <div class="d-flex justify-content-center">
            <i class="fa-solid fa-arrows-up-down-left-right text-center mt-2 refresh-button mb-2"></i>
          </div>

          <div class="p-2 border-top d-flex justify-content-between" style="height: 2rem;">
            <p><small><%= plan_recipe.recipe.calories %> kcal</small></p>
            <p><small><%= plan_recipe.recipe.cook_time %> min</small></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  </div>

  <%= cl_image_tag "nuuhj2sr3mgiroobkyz1", class:"flex-grow-1" %>

</section>

