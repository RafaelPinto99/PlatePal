<ul class="recipes-list m-0 p-0 position-fixed start-0 overflow-auto" id="aside" data-controller="recipes-list" data-preserve-scroll>
  <%= render 'shopping_lists/modal_shopping_list', shopping_list: @shopping_list %>
  <% @plan.plan_recipes.each do |plan_recipe| %>
    <%= link_to plan_plan_recipe_path(@plan, plan_recipe),
      id: "#{'highlight' if plan_recipe == selected_plan_recipe}",
      class: "m-2 p-2 d-flex justify-content-start align-items-center gap-3",
      data: { action: "click->recipes-list#highlight", recipes_list_target: "item" } do %>
        <%= cl_image_tag plan_recipe.recipe.photo.key, width: 70, height: 70, crop: :thumb, class: "border rounded-circle" %>
        <%= plan_recipe.recipe.name %>
    <% end %>
  <% end %>
</ul>
