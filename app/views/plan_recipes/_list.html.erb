<ul class="recipes-list m-0 p-0 position-fixed start-0 overflow-auto">
  <% @plan.plan_recipes.each do |plan_recipe| %>
    <%= link_to plan_plan_recipe_path(@plan, plan_recipe), class: "text-decoration-none" do %>
      <li class="#{'active' if plan_recipe == selected_plan_recipe} m-2 p-2 d-flex flex-row justify-content-start align-items-center gap-3">
        <%= cl_image_tag plan_recipe.recipe.photo.key, width: 70, height: 70, crop: :thumb, class: "border rounded-circle" %>
        <%= plan_recipe.recipe.name %>
      </li>
    <% end %>
  <% end %>
</ul>
