      <div
        class="card border rounded-5 my-4 mx-2 bg-info"
        style="width: 9rem; heigth: 5rem;"
        data-id="<%= plan_recipe.id %>"
        draggable="true"
      >
        <div class="card-body d-flex flex-column justify-content-end">
          <div class="d-flex justify-content-center">
            <%= cl_image_tag plan_recipe.recipe.photo.key, width: 80, height: 80, crop: :thumb, gravity: :face, class:"rounded-circle position-absolute top-0 start-50 translate-middle border" %>
          </div>
          <div class=" d-flex flex-column justify-content-between">
            <h5 class="mt-5 text-center mb-0"> <small><%= plan_recipe.recipe.name %></small></h5>
            <p class="mt-2 mb-0 text-center"><small><%= plan_recipe.recipe.cook_time %> min</small></p>
            <i class="fa-solid fa-arrows-up-down-left-right text-center mt-2"></i>
          </div>
        </div>
      </div>
