<div
        class="card border-rounded m-3"
        style="width: 9rem;"
        data-id="<%= plan_recipe.id %>"
        draggable="true"
      >
        <div class="card-body">
          <div class="d-flex justify-content-center">
            <%= cl_image_tag plan_recipe.recipe.photo.key, width: 80, height: 80, crop: :thumb, gravity: :face, class:"rounded-circle" %>
          </div>

          <div class="d-flex justify-content-end mt-3">
           <i class="fa-solid fa-arrows-up-down-left-right"></i>
          </div>

          <% if plan_recipe.position <= 7 %>
            <i class="fa-regular fa-sun"></i>
          <% else %>
            <i class="fa-regular fa-moon"></i>
          <% end %>

          <h5 class="mt-3"><%= plan_recipe.recipe.name %></h5>
        </div>
      </div>
