<div class="container">
  <div>
    <div class="d-flex justify-content-between mt-5">
      <h2><%= @plan.title.capitalize %></h2>
      <p><%= link_to 'Done <i class="fa-solid fa-check"></i>'.html_safe, plan_path(@plan), class: "btn btn-primary text-white rounded-pill px-3 py-1", data: { action: "click->drag-and-drop#saveOrder" } %></p>
    </div>
    <p class="pt-3">Drag and drop meals to rearrange your schedule - swap lunch for dinner or move to a different day effortlessly.</p>
  </div>

  <div class="d-flex justify-content-evenly mt-5">
    <div class="text-center" style="width: 9rem;">
      <p>Mon</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Tue</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Wed</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Thu</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Fri</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Sat</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Sun</p>
    </div>
  </div>

  <div class="d-flex flex-wrap justify-content-evenly" data-controller="drag-and-drop">
    <% @plan.plan_recipes.each do |plan_recipe| %>
      <div class="card border-rounded m-3" style="width: 9rem;" data-id="<%= plan_recipe.id %>">
        <div class="card-body">
          <div class="d-flex justify-content-center">
            <%= cl_image_tag plan_recipe.recipe.photo.key, width: 80, height: 80, crop: :thumb, gravity: :face, class:"rounded-circle" %>
          </div>

          <div class="d-flex justify-content-end mt-3">
            <i class="fa-solid fa-arrows-up-down-left-right"></i>
          </div>

          <h5 class="mt-3"><%= plan_recipe.recipe.name %></h5>
        </div>
      </div>
    <% end %>
  </div>

</div>
