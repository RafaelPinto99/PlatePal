<div class="container">
  <div>
    <div class="d-flex justify-content-between mt-5">
      <h2><%= @plan.title.capitalize %></h2>
      <p>
        <%= link_to 'Done <i class="fa-solid fa-check"></i>'.html_safe,
                    plan_path(@plan),
                    class: "btn btn-primary text-white rounded-pill px-3 py-1"%>
      </p>

    </div>
    <p class="pt-3">Drag and drop meals to rearrange your schedule - swap lunch for dinner or move to a different day effortlessly.</p>
  </div>

  <div class="d-flex justify-content-evenly mt-5">
    <div class="text-center" style="width: 9rem;">
      <p>Mon</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Tue</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Wed</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Thu</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Fri</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Sat</p>
    </div>
    <div class="text-center" style="width: 9rem;">
      <p>Sun</p>
    </div>
  </div>

  <div class="d-flex flex-wrap justify-content-evenly" data-controller="drag-and-drop" data-drag-and-drop-update-positions-url="<%= update_positions_plan_path(@plan) %>">
    <% @plan.plan_recipes.each do |plan_recipe| %>
      <%= render "plans/calendar", plan_recipe: plan_recipe %>
    <% end %>
  </div>
</div>
